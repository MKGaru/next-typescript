{
    "compilerOptions": {
        "moduleResolution": "node",
        "jsx": "react",
        "module": "es6",
        "target": "es2015",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}